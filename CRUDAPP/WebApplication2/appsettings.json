  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnectionString": "Server=(LocalDB)\\MSSQLLocalDB;Database=CRUD;Trusted_Connection=True;MultipleActiveResultSets=true;"
  }
}


