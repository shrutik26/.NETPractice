{
  "SeriLog": {
    "MinimumLevel": {
      "Default": "Information",
      "OverRide": {
        "System": "Error",
        "Microsoft": "Error"
      }
    },

      "WriteTo": [
        {
          "Name": "File",
          "Args": {
            "path": "Logs/log.txt",
            "rollingInterval" :  "Day",
            "outputTemplate" : "{Timestamp} [{level}] - Message: {Message}{NewLine}{Exception}"
          }
        }
      ]
    },

